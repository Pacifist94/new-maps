<script>

function myFunction() {
  document.getElementById("myDropdown").classList.toggle("show");

}

function myFunction3() {
if (document.getElementById("myDropdown").classList.toggle("show")) {


}
else{
  document.getElementById("myDropdown").classList.toggle("show");
}

   
 
}

function myFunction2(reason) {
 //alert("Hola");
 document.getElementById("myInput").value = reason;
   document.getElementById("myDropdown").classList.toggle("show");

   document.getElementById("areaEpin").focus();
   var now = moment();

   document.getElementById("areaEpin").value = now;

// document.getElementById("myDropdown").style.visibility = "hidden"
}

function filterFunction() {
  var input, filter, ul, li, a, i;
  input = document.getElementById("myInput");
  filter = input.value.toUpperCase();
  div = document.getElementById("myDropdown");
  a = div.getElementsByTagName("a");
  for (i = 0; i < a.length; i++) {
    txtValue = a[i].textContent || a[i].innerText;
    if (txtValue.toUpperCase().indexOf(filter) > -1) {
      a[i].style.display = "";
    } else {
      a[i].style.display = "none";
    }
  }
}
</script>

